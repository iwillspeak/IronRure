{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "dotnet",
    "args": [],
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "restore",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "restore"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "bench",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "bench/Alice/Alice.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test",
                "test/IronRureTests/IronRureTests.csproj"
            ],
            "problemMatcher": [],
            "group": "test"
        }
    ]
}